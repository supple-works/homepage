---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {}

const { ...attrs } = Astro.props;
---

<div class="rolodex" {...attrs}>
	<ol class="rolodex__list | flow" role="list">
		<slot />
	</ol>
</div>

<style>
	.rolodex {
		--_rolodex-number-of-items: var(--number-of-items, 0);
		view-timeline-name: --rolodex-scrolls-in-body;
	}
	.rolodex__list {
		--flow-gap: var(--spacing-gutter);
	}
</style>
