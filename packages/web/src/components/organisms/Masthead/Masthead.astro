---
import Logo from "../../../images/supple-works.logo.svg";
---

<header class="masthead">
	<div class="masthead__inner | repel retain" data-size="mural" data-fit>
		<a href="/" class="logo">
			<Logo class="logo__visual" />
			<span class="visually-hidden">to the homepage</span>
		</a>
		<nav>
			<ul class="masthead__menu | cluster | text-small uppercase font-semibold" role="list">
				<li><a href="#our-values">Values</a></li>
				<li><a href="#who-are-we">Supple</a></li>
				<li><a href="#lets-talk">Let's talk</a></li>
			</ul>
		</nav>
	</div>
</header>

<style is:global>
	:where(:root) {
		--masthead-block-size: 8rem;
	}
</style>

<style>
	.masthead {
		--repel-vertical-alignment: center;
		--repel-gap: calc(var(--spacing-gutter) / 2);

		color: var(--color-surface-foreground);
		background-color: var(--color-surface-background);
	}

	.masthead__inner {
		min-block-size: var(--masthead-block-size);
		inline-size: 100%;
		padding-block: calc(var(--spacing-gutter) / 2);
		border-block-end: 2px solid var(--color-primary-background);
	}

	.logo {
		color: currentColor;
	}

	.logo__visual {
		display: block;
		inline-size: 100%;
		max-inline-size: 16rem;
		block-size: auto;
	}

	@supports (animation-timeline: scroll()) {
		/* Same @media as MastHero */
		@media (prefers-reduced-motion: no-preference) {
			.masthead {
				position: sticky;
				inset-block-start: 0;
				inset-inline-start: 0;
				inline-size: 100%;
				z-index: 10;
				animation-timeline: scroll();
				animation-range: calc(var(--masthero-min-block-size) - var(--masthead-block-size))
					calc(var(--masthero-min-block-size) + var(--masthead-block-size));
				animation-name: slide-up;
				animation-fill-mode: both;
				animation-timing-function: linear;
			}
			@keyframes slide-up {
				to {
					transform: translateY(-100%);
				}
			}
		}
	}
</style>
