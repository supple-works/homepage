---
import Layout from '@layouts/Layout.astro';
import { Swatch } from '@components/styleguide';
---

<Layout
	metaData={{
		title: 'bram.is styleguide',
		description: 'bram.is styleguide',
	}}
>
	<div class="o-retain o-retain--desk">
		<div class="o-flow">
			<h1>Styleguide</h1>

			<ul>
				<li><a href="#colors">Colors</a></li>
				<li><a href="#typography">Typography</a></li>
			</ul>

			<div class="o-flow">
				<section id="colors">
					<h2>Colors</h2>

					<ul class="c-swatch-grid | o-grid" role="list">
						<li>
							<Swatch color="primary" />
						</li>
						<li>
							<Swatch color="secondary" />
						</li>
					</ul>
				</section>

				<section id="typography">
					<h2>Typography</h2>

					<h3>Font</h3>
					<dl>
						<dt>Light</dt>
						<dd>AaBbCcDdEeGgNn 1234567890</dd>
						<dt>Regular</dt>
						<dd>AaBbCcDdEeGgNn 1234567890</dd>
						<dt>Medium</dt>
						<dd>AaBbCcDdEeGgNn 1234567890</dd>
						<dt>Semi bold</dt>
						<dd>AaBbCcDdEeGgNn 1234567890</dd>
						<dt>Bold</dt>
						<dd>AaBbCcDdEeGgNn 1234567890</dd>
					</dl>

					<h3>Heading levels</h3>
					<h1>H1, nesciunt atque voluptatum velit fugiat corrupti deleniti</h1>
					<p>72px</p>
					<h2>H2</h2>
					<p>72px</p>
					<h3>H3</h3>
					<p>72px</p>
					<h4>H4</h4>
					<p>72px</p>
					<h5>H5</h5>
					<p>72px</p>
					<h6>H6</h6>
					<p>72px</p>

					<small>Small</small>

					<p>
						Lorem ipsum dolor sit amet consectetur adipisicing elit. Mollitia
						facilis modi vero fuga praesentium! Nesciunt atque maiores,
						laboriosam neque, eveniet voluptatum velit fugiat corrupti deleniti
						error nobis cupiditate nemo temporibus?
					</p>
				</section>

				<section id="spacing">
					<h2>Spacing</h2>
					<ul class="c-list" role="list">
						{
							[
								'nano',
								'micro',
								'milli',
								'base',
								'kilo',
								'mega',
								'giga',
								'tera',
							].map((item) => (
								<li
									class="c-space"
									style={`--c-space-size: var(--s-space-${item})`}
								>
									<span>
										<h3 class="u-fs-base">{item}</h3>
										<code>--s-space-{item}</code>
									</span>
								</li>
							))
						}
					</ul>
				</section>
			</div>
		</div>
	</div>
</Layout>

<style lang="scss">
	.c-swatch-grid {
		--s-grid-min-item-size: 8rem;
		--s-grid-gutter: 2rem;
	}

	.c-list {
		display: flex;
		flex-direction: column;
		gap: var(--s-space-base);
	}

	.c-space {
		--c-space-size: var(--s-space-base);
		display: flex;
		gap: var(--s-space-milli);
		align-items: center;

		&::before {
			display: block;
			aspect-ratio: 1 / 1;
			inline-size: var(--c-space-size);
			background-color: #ccc;
			content: '';
		}
	}
</style>
