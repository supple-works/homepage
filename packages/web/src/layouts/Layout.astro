---
import type { HTMLAttributes } from "astro/types";
import { MetaData, type MetaDataProps } from "@components/elements";

import "../styles/global.css";
import type { PageProps } from "src/utilities/api/queries";
import { Footer } from "@components/organisms";
import { OpenPanelComponent } from "@openpanel/astro";

export interface Props extends HTMLAttributes<"html">, MetaDataProps {
	lang?: string;
	type?: string;
	alternativeTranslations?: PageProps["alternativeTranslations"];
}

const { lang = "en", type, alternativeTranslations, metaData, skipMetaTitleSuffix } = Astro.props;
---

<!doctype html>
<html lang={lang} data-page-type={type}>
	<head>
		<MetaData
			metaData={metaData}
			skipMetaTitleSuffix={skipMetaTitleSuffix}
			alternativeTranslations={alternativeTranslations}
		/>
		<OpenPanelComponent
			clientId="47a7e085-6338-498f-8f0c-b9dd8a7239b0"
			trackScreenViews={true}
			trackOutgoingLinks={true}
			apiUrl="//api.analytics.supple.works"
			cdnUrl="//analytics.supple.works/op1.js"
		/>
	</head>
	<body>
		<!-- <Masthead /> -->
		<main id="content">
			<slot />
		</main>
		<Footer />
	</body>
</html>
